{
  "swagger": "2.0",
  "paths": {
    "/api/users": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "View list of users ",
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "200": {
            "schema": {
              "$ref": "#/definitions/viewusers"
            },
            "description": "Success"
          }
        },
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "type": "string",
            "required": false,
            "name": "business",
            "in": "query",
            "enum": [
              "service",
              "tech",
              "product"
            ],
            "description": "Business Name"
          },
          {
            "type": "string",
            "required": false,
            "name": "role",
            "in": "query",
            "enum": [
              "user",
              "admin"
            ],
            "description": "Role Name"
          },
          {
            "type": "string",
            "required": false,
            "name": "name",
            "in": "query",
            "description": "Name"
          },
          {
            "type": "string",
            "required": false,
            "name": "order",
            "in": "query",
            "enum": [
              "Ascending",
              "Descending"
            ],
            "description": "Order by Name in ASC or DESC"
          },
          {
            "type": "string",
            "required": false,
            "name": "email",
            "in": "query",
            "description": "Email of user"
          }
        ],
        "operationId": "ApiWeb.UserController.view_users",
        "description": "A list of users is shown",
        "consumes": [
          "application/json"
        ]
      }
    },
    "/api/user": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create a new user",
        "responses": {
          "400": {
            "description": "Bad request"
          },
          "200": {
            "schema": {
              "$ref": "#/definitions/user"
            },
            "description": "Success"
          }
        },
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "schema": {
              "$ref": "#/definitions/user"
            },
            "required": true,
            "name": "user",
            "in": "body",
            "description": "User created successfully"
          }
        ],
        "operationId": "ApiWeb.UserController.create_user",
        "description": "A new user is created",
        "consumes": [
          "application/json"
        ]
      }
    }
  },
  "info": {
    "version": "0.0.1",
    "title": "NovaUser"
  },
  "host": "localhost:4000",
  "definitions": {
    "viewusers": {
      "type": "object",
      "title": "User",
      "required": [
        "role",
        "name",
        "email"
      ],
      "properties": {
        "role": {
          "type": "string",
          "description": "User role"
        },
        "name": {
          "type": "string",
          "description": "Full name"
        },
        "email": {
          "type": "string",
          "description": "Email address"
        },
        "business": {
          "type": "string",
          "description": "Business name"
        }
      },
      "example": {
        "role": "user",
        "name": "example",
        "email": "example@gmail.com",
        "business": "service"
      },
      "description": "A user"
    },
    "user": {
      "type": "object",
      "title": "User",
      "required": [
        "role",
        "business",
        "password",
        "name",
        "email"
      ],
      "properties": {
        "role": {
          "type": "string",
          "description": "Role"
        },
        "password": {
          "type": "string",
          "description": "Password"
        },
        "name": {
          "type": "string",
          "description": "Name"
        },
        "email": {
          "type": "string",
          "description": "Email"
        },
        "business": {
          "type": "string",
          "description": "Business"
        }
      },
      "example": {
        "role": "user",
        "password": "password123",
        "name": "Example",
        "email": "Example@gmail.com",
        "business": "service"
      },
      "description": " A user record"
    }
  }
}